<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start_menu"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_music"
        android:layout_width="49dp"
        android:layout_height="36dp"
        android:layout_gravity="right"
        android:background="@drawable/btn_music"
        android:gravity="right" />

    <ImageView
        android:id="@+id/imgv_startmenu_role"
        android:layout_width="166dp"
        android:layout_height="200dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_weight="1.10"
        android:background="@drawable/ic_role" />

    <Button
        android:id="@+id/btn_startmenu_play"
        android:layout_width="147dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:background="@anim/anim_startmenu_play" />

    <Button
        android:id="@+id/btn_startmenu_shop"
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_startmenu_shop"
        android:gravity="left" />

</LinearLayout>