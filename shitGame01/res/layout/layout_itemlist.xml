<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" >
    <ImageView 
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_imagedesc"
        />
    <LinearLayout 
        android:id="@+id/liyt_desc"
        android:layout_toRightOf="@id/iv_imagedesc"
        android:orientation="vertical"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerVertical="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#e7DE91"
        android:id="@+id/tv_shortdesc"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e7DE91"
        android:id="@+id/tv_bagstore"
		/>
    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@id/liyt_desc"
        android:id="@+id/liyt_buybtn"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <ImageButton
	     android:background="#00000000"
	   	 android:src="@drawable/ic_coin"
	   	 android:layout_width="35dp"
       	 android:layout_height="30dp"
       	 android:scaleType="fitXY"
       	 android:id="@+id/btn_buyitem"
        />
        <TextView 
            android:gravity="center"
            android:textColor="#e7DE71"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
      	/>
    </LinearLayout>
	<Button 
	    android:layout_toRightOf="@id/liyt_buybtn"
	    android:layout_marginTop="37dp"
	    android:layout_marginLeft="10dp"
	    android:background="#00ff"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="+"
	    android:textSize="28dp"
	    android:textColor="@drawable/btn_shop_color_selector1_1"
	    android:id="@+id/btn_buybtn"/>
</RelativeLayout>

